<!-- partial:index.partial.html -->
<div id="bg">
</div>
<div>
    <div class="div-field">
        <button onclick="connectbutton()" class="btn" id="getMessage">Connect with Metamask</button>
        @*<p id="qrcode"></p>*@
    </div>
